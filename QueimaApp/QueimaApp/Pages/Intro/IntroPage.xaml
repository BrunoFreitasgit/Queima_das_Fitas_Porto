<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QueimaApp.Pages.IntroPage"
             xmlns:local="clr-namespace:QueimaApp;assembly=QueimaApp">
  <ContentPage.ToolbarItems>
    <ToolbarItem Text="Fechar" Command="{Binding CloseCommand}" >
    </ToolbarItem>
  </ContentPage.ToolbarItems>
  <ContentPage.Content>
    <Button Text="Entrar com Facebook!"
            HorizontalOptions="Center"
            VerticalOptions="CenterAndExpand"
           Command="{Binding FacebookButtonCommand}" />

  </ContentPage.Content>
</ContentPage>